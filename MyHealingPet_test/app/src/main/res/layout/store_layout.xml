<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rStoreLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="220dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#aaaaaa">

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/neckMenuButton"
                    android:layout_width="380px"
                    android:layout_height="100px"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="selectFrag"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/neckmenu" />

                <ImageButton
                    android:id="@+id/tailMenuButton"
                    android:layout_width="380px"
                    android:layout_height="100px"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="selectFrag"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tailmenu" />

                <ImageButton
                    android:id="@+id/toyMenuButton"
                    android:layout_width="380px"
                    android:layout_height="100px"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="selectFrag"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/toymenu" />

                <ImageButton
                    android:id="@+id/foodMenuButton"
                    android:layout_width="380px"
                    android:layout_height="100px"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="selectFrag"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/foodmenu" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_place"
            android:name="org.capstone.itemstore.NeckMenuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout="@layout/store_layout" />
        />

    </LinearLayout>


</RelativeLayout>